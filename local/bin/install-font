#!/bin/sh

fontname="$1"
fontpath="$HOME/.local/share/fonts/$fontname"
url="$(curl -s https://api.github.com/repos/ryanoasis/nerd-fonts/releases/latest | jq -r ".assets[] | select(.name | contains(\"$fontname\")) | .browser_download_url")"

mkdir -p "$fontpath"
cd "$fontpath"
wget -O "$fontname.zip" "$url"
unzip -uj "$fontname.zip"
\rm "$fontname.zip"
