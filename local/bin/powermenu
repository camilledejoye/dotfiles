#!/bin/sh

# I must specify the font to have the correct glyph for lock screen and poweroff
choice="$(rofi -dmenu -font "Font Awesome 5 Free 10" -i -p 'Action' -lines 4 -width 15 $* <<<' Lock Screen
 Log Out
 Restart
 Power Off')"

case "$choice" in
    *"Lock Screen")
        loginctl lock-session
        ;;
    *"Log Out")
        ~/.local/bin/logout
        ;;
    *"Restart")
        reboot
        ;;
    *"Power Off")
        shutdown
        ;;
esac
