# Borders {{{

default_border pixel 1
default_floating_border normal 1
# Shomehow the previous lines does seem to work but this one does
for_window [class="^.*"] border pixel 1

# Hide borders adjacent to the screen edges <none|vertical|horizontal|both|smart>
# hide_edge_borders both
hide_edge_borders smart_no_gaps

# Gaps
# gaps inner 3
gaps inner 0
gaps outer 0

# Remove gaps and borders when there is only one window
smart_gaps on

