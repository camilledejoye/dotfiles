# Global {{{

# quit bspwm
super + alt + BackSpace
	dmenu-prompt "Logout?" "bspc quit"

# Reload sxhkd config file and restart bspwm
super + ctrl + r
    pkill -USR1 -x sxhkd; \
    bspc wm --restart

# }}}

# Layouts {{{

# alternate between the tiled and monocle layout
super + m
    bspc desktop --layout next

# set the window state
super + {t,shift + t,s,f}
    bspc node --state {tiled,pseudo_tiled,floating,fullscreen}

# }}}

# Windows {{{

# Close and kill
super + {_,shift + }q
  bspc node --{close,kill}

# Focus or swap the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node --{focus,swap} {west,south,north,east}

# Focus the next/previous node in the current desktop
super + {_,shift + }c
    bspc node --focus {next,prev}.local

# Focus the last node in the current desktop
super + twosuperior
    bspc node --focus last.local

# focus the older or newer node in the focus history
super + ctrl + {o,i}
    bspc wm --record-history off; \
    bspc node {older,newer} --focus; \
    bspc wm --record-history on

# Swap the current node and the biggest node of the desktop
super + g
    bspc node --swap biggest.local

# Focus the node for the given path jump
super + {p,b,comma,period}
    bspc node --focus @{parent,brother,first,second}

# Set the node flags
super + ctrl + {m,x,y,z}
    bspc node --flag {marked,locked,sticky,private}

# Expand or contract a window by moving one of its side outward/inward
super + r : { \
h, shift + l, \
j, shift + k, \
k, shift + j, \
l, shift + h \
}
	bspc node --resize { \
		left -20 0, left 20 0, \
		bottom 0 20, bottom 0 -20, \
		top 0 -20, top 0 20, \
		right 20 0, right -20 0, \
	}

# }}}

# Desktops {{{

# Thanks azerty keyboard ;)
# Focus a desktop
super + {ampersand,eacute,quotedbl,apostrophe,parenleft,minus,egrave,underscore,ccedilla,agrave}
    bspc desktop --focus '^{1-9,10}'

# Send a node to a desktop and follows it
super + shift + {1-9,0}
    bspc node --to-desktop '^{1-9,10}' --follow

# Focus the last desktop
super + Tab
    bspc desktop --focus last

# }}}

# Preselection {{{

# Send the newest marked node to the newest preselected node
super + {_,shift + }y
    bspc node {newest.marked.local, focused} --to-node newest.!automatic.local

# Preselect the direction
super + ctrl + {h,j,k,l}
    bspc node --presel-dir {west,south,north,east}

# Preselect the ratio
super + ctrl + {ampersand,eacute,quotedbl,apostrophe,parenleft,minus,egrave,underscore,ccedilla}
    bspc node --presel-ratio 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + Escape
    bspc node --presel-dir cancel

# }}}
