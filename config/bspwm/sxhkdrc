# Global {{{

# Reload sxhkd config and restart bspwm
alt + ctrl + r
    pkill -USR1 -x sxhkd; \
    bspc wm --restart

# }}}

# Layouts {{{

# Toggle monocle layout
alt + m
    bspc desktop --layout next

# Switch window state to: Tiled, Pseudo Tiled, Floating, Fullscreen
alt + {t,shift + t,s,f}
    bspc node --state {tiled,pseudo_tiled,floating,fullscreen}

# }}}

# Windows {{{

# Close or kill a window
alt + {_,shift + }q
  bspc node --{close,kill}

# Move to the window in the given direction or swap it with the current one
alt + {_,shift + }{h,j,k,l}
    bspc node --{focus,swap} {west,south,north,east}

# Focus the next/previous window in the current desktop
alt + {_,shift + }c
    bspc node --focus {next,prev}.local

# azerty: alt + twosuperior
# qwerty: alt + grave
# Focus the last window in the current desktop
alt + twosuperior
    bspc node --focus last.local

# Focus the previous/next window in the history
alt + ctrl + {o,i}
    bspc wm --record-history off; \
    bspc node {older,newer} --focus; \
    bspc wm --record-history on

# Swap the current window with the biggest one in the current desktop
alt + g
    bspc node --swap biggest.local

# Focus the window for the given path jump
alt + {p,b,comma,period}
    bspc node --focus @{parent,brother,first,second}

# Set a window's flags
alt + ctrl + {m,x,y,z}
    bspc node --flag {marked,locked,sticky,private}

# Resize a window
alt + r : { \
h, shift + l, \
j, shift + k, \
k, shift + j, \
l, shift + h \
}
	bspc node --resize { \
		left -20 0, left 20 0, \
		bottom 0 20, bottom 0 -20, \
		top 0 -20, top 0 20, \
		right 20 0, right -20 0, \
	}

# }}}

# Desktops {{{

# Thanks azerty keyboard ;)
# azerty: alt + {ampersand,eacute,quotedbl,apostrophe,parenleft,minus,egrave,underscore,ccedilla,agrave}
# qwerty: alt + {1-9,0}
# Focus a desktop
alt + {ampersand,eacute,quotedbl,apostrophe,parenleft,minus,egrave,underscore,ccedilla,agrave}
    bspc desktop --focus '^{1-9,10}'

# Send a window to a desktop and follows it
alt + shift + {1-9,0}
    bspc node --to-desktop '^{1-9,10}' --follow

# Focus the last desktop
alt + Tab
    bspc desktop --focus last

# }}}

# Preselection {{{

# Send the newest marked or current window to the newest preselected spot
alt + {_,shift + }y
    bspc node {newest.marked.local, focused} --to-node newest.!automatic.local

# Preselect the direction
alt + ctrl + {h,j,k,l}
    bspc node --presel-dir {west,south,north,east}

# Preselect the ratio
alt + ctrl + {1-9}
    bspc node --presel-ratio 0.{1-9}
# alt + ctrl + {ampersand,eacute,quotedbl,apostrophe,parenleft,minus,egrave,underscore,ccedilla}

# Cancel the preselection
alt + ctrl + Escape
    bspc node --presel-dir cancel

# }}}
