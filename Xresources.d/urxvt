! Disable keycap picture when pressing Ctrl + Shift
URxvt.iso14755: false
URxvt.iso14755_52: false

! Scroll {{{

! Disable the scrollbar
URxvt.scrollBar: false
! Do not scroll with output
URxvt.scrollTtyOutput: false
! Scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt.scrollWithBuffer: true
! Scroll back to the bottom on keypress
URxvt.scrollTtyKeypress: true

! Disable the scrollback buffer when using the "secondary screen" (pager for instance)
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! I usually do not use the mouse but the previous config make does not work the mouse wheel
! It might be worth it to install the following AUR package to fix that: rxvt-unicode-better-wheel-scrolling
! And enable the following config
! URxvt.secondaryWheel: 1

! }}}

! Fonts {{{

URxvt.font: xft:Hack Nerd Font Mono:size=8

! Characters feels a little bit so far from each other
! URxvt.letterSpace: -1

! }}}

! Key bindings {{{

! Fix Ctrl-Arrows code
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D

! }}}

! Extensions {{{

URxvt.perl-ext-common:  default,resize-font,keyboard-select,clipboard
URxvt.perl-ext: default,url-select

! Yankable URLs
URxvt.keysym.M-u: builtin-string:
URxvt.keysym.C-S-0x55: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

! Keyboard select
! Activate the "normal" mode
URxvt.keysym.C-Escape: perl:keyboard-select:activate
! Override the default backward search mode
! URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.M-s: builtin-string:

! Clipboard
! Copy selection to clipboard too
URxvt.clipboard.autocopy: true
! Reset the original mappings
URxvt.keysym.M-c: builtin-string:
URxvt.keysym.M-v: builtin-string:
! Need the hex value for "C" and "V" otherwise it does not work
URxvt.keysym.C-S-0x43: perl:clipboard:copy
URxvt.keysym.C-S-0x56: perl:clipboard:paste

! }}}

! vim: ft=xdefaults fdm=marker cms=!\ %s
