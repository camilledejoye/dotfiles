! Enabled modi
rofi.modi: run,window,ssh,drun

! Enable fuzzy matching
rofi.matching: fuzzy

! Window width
rofi.width: 50
! Number of lines
rofi.lines: 15
! Number of columns
rofi.columns: 4
! Font to use
rofi.font: Hack Nerd Font Mono 8
! Location on screen    0 = middle of the screen
rofi.location: 0
! Border width
rofi.bw: 1

! Rofi does not propose alternated way for those two deprecations
! So I keep them until I find out how to do it properly
! Separator style (none, dash, solid) *DEPRECATED*
rofi.separator-style: none
! "Hide scroll-bar *DEPRECATED*"
rofi.hide-scrollbar: true

! Color scheme window   background, border, separator
rofi.color-window: base00, base02, base02
! Color scheme for normal row   bg, fg, bg-alt, hl-bg, hl-fg
rofi.color-normal: base00, base05, base00, base0D, base00
! Color scheme for urgent row
rofi.color-urgent: base00, base05, base00, base08, base00
! Color scheme for active row
rofi.color-active: base00, base05, base00, base0B, base00

